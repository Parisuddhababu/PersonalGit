{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "paths": {
      "@type/*": [
        "./src/@type/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@util/*": [
        "./src/util/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@constant/*": [
        "./src/constant/*"
      ],
      "@templates/*": [
        "./src/templates/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@metadata/*": [
        "./src/metadata/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
